<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    tools:context="a15008377.opsc7311_assign1_15008377.HomeActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/play_button"
        android:textSize="@dimen/home_activity_text_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/button_vertical_margin"
        android:layout_marginLeft="@dimen/button_horizontal_margin"
        android:layout_marginRight="@dimen/button_horizontal_margin"
        android:onClick="startGame"/>

    <Button
        android:id="@+id/button_how_to_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_to_play_button"
        android:textSize="@dimen/home_activity_text_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/button_horizontal_margin"
        android:layout_marginRight="@dimen/button_horizontal_margin"/>

    <Button
        android:id="@+id/button_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/statistics_button"
        android:textSize="@dimen/home_activity_text_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/button_vertical_margin"
        android:layout_marginLeft="@dimen/button_horizontal_margin"
        android:layout_marginRight="@dimen/button_horizontal_margin"
        android:onClick="startStatistics"/>

    <ProgressBar
        android:id="@+id/progress_bar_home"
        android:layout_height="@dimen/progress_bar_diameter"
        android:layout_width="@dimen/progress_bar_diameter"
        android:indeterminate="true"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
