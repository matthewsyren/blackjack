<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a15008377.opsc7311_assign1_15008377.GameActivity"
    android:background="#00aa00">

    <RelativeLayout
        android:id="@+id/layout_actions"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/game_activity_actions_layout_height"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/label_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/button_hit"
            android:layout_width="@dimen/game_activity_button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/hit_button"
            android:textSize="@dimen/game_activity_text_size"
            android:onClick="hitPlayer"/>

        <Button
            android:id="@+id/button_stay"
            android:layout_width="@dimen/game_activity_button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/stay_button"
            android:textSize="@dimen/game_activity_text_size"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/hand_of_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_actions"
        android:layout_alignParentLeft="true"
        android:numColumns="3" />
</RelativeLayout>